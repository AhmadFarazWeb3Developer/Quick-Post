<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Create Account</title>
  </head>
  <body
    class="bg-zinc-900 text-zinc-50 flex items-center justify-center h-screen"
  >
    <div class="w-full max-w-lg bg-zinc-800 p-8 rounded-lg shadow-lg">
      <h3 class="text-2xl font-semibold mb-6 text-center text-blue-400">
        Create Your Account
      </h3>
      <form action="/register" method="post" class="space-y-4">
        <!-- Username -->
        <input
          type="text"
          name="username"
          placeholder="Username"
          class="w-full px-4 py-2 rounded-md bg-zinc-900 border border-zinc-700 focus:ring-2 focus:ring-blue-500 outline-none text-zinc-200"
          required
        />
        <!-- Name -->
        <input
          type="text"
          name="name"
          placeholder="Name"
          class="w-full px-4 py-2 rounded-md bg-zinc-900 border border-zinc-700 focus:ring-2 focus:ring-blue-500 outline-none text-zinc-200"
          required
        />
        <!-- Age -->
        <input
          type="number"
          name="age"
          placeholder="Age"
          class="w-full px-4 py-2 rounded-md bg-zinc-900 border border-zinc-700 focus:ring-2 focus:ring-blue-500 outline-none text-zinc-200"
          required
        />
        <!-- Email -->
        <input
          type="email"
          name="email"
          placeholder="Email"
          class="w-full px-4 py-2 rounded-md bg-zinc-900 border border-zinc-700 focus:ring-2 focus:ring-blue-500 outline-none text-zinc-200"
          required
        />
        <!-- Password -->
        <input
          type="password"
          name="password"
          placeholder="Password"
          class="w-full px-4 py-2 rounded-md bg-zinc-900 border border-zinc-700 focus:ring-2 focus:ring-blue-500 outline-none text-zinc-200"
          required
        />
        <!-- Submit -->
        <button
          type="submit"
          class="w-full py-2 bg-blue-600 rounded-md text-white font-semibold hover:bg-blue-500"
        >
          Create Account
        </button>
      </form>
    </div>
  </body>
</html>
